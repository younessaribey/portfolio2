---
import Layout from "./Layout.astro";
import { projects, type Project } from "../data/projects";
import { ArrowLeft, ExternalLink, Shield, BookOpen } from "lucide-react";

interface Props {
    projectId: string;
}

const { projectId } = Astro.props;
const project = projects.find((p) => p.id === projectId);

if (!project) {
    return Astro.redirect("/404");
}
---

<Layout title={`${project.title} | Case Study`}>
    <!-- Back Navigation -->
    <nav class="fixed top-0 left-0 right-0 z-40 bg-[#0a0a0a]/80 backdrop-blur-lg border-b border-gray-800">
        <div class="container mx-auto px-4 py-4 flex items-center justify-between">
            <a
                href="/#projects"
                class="flex items-center gap-2 text-gray-400 hover:text-white transition-colors"
            >
                <svg xmlns="http://www.w3.org/2000/svg" class="w-5 h-5" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="m15 18-6-6 6-6"/></svg>
                Back to Projects
            </a>
            <div class="flex items-center gap-3">
                {project.liveUrl && (
                    <a
                        href={project.liveUrl}
                        target="_blank"
                        rel="noopener noreferrer"
                        class="px-4 py-2 bg-gradient-to-r from-green-500 to-emerald-600 text-white font-semibold rounded-lg text-sm flex items-center gap-2 hover:scale-105 transition-transform"
                    >
                        <svg xmlns="http://www.w3.org/2000/svg" class="w-4 h-4" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M18 13v6a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V8a2 2 0 0 1 2-2h6"/><polyline points="15 3 21 3 21 9"/><line x1="10" y1="14" x2="21" y2="3"/></svg>
                        Live Demo
                    </a>
                )}
            </div>
        </div>
    </nav>

    <main class="pt-24 pb-20">
        <!-- Hero Section -->
        <section class="container mx-auto px-4 mb-16">
            <div class="max-w-4xl mx-auto text-center">
                <span class="inline-block px-4 py-1.5 bg-purple-500/10 border border-purple-500/30 rounded-full text-purple-400 text-sm font-medium mb-6">
                    {project.subtitle}
                </span>
                <h1 class="text-4xl md:text-6xl font-bold text-white mb-6 bg-gradient-to-r from-white via-purple-200 to-purple-400 bg-clip-text text-transparent">
                    {project.title}
                </h1>
                <p class="text-xl text-gray-400 leading-relaxed max-w-3xl mx-auto">
                    {project.description}
                </p>

                <!-- Tech Stack Badges -->
                <div class="flex flex-wrap justify-center gap-2 mt-8">
                    {project.technologies.map((tech) => (
                        <span class="px-3 py-1.5 bg-gray-800 border border-gray-700 rounded-full text-gray-300 text-sm">
                            {tech}
                        </span>
                    ))}
                </div>

                <!-- Security Badges -->
                {project.securityFeatures && project.securityFeatures.length > 0 && (
                    <div class="flex flex-wrap justify-center gap-2 mt-4">
                        {project.securityFeatures.map((feature) => (
                            <span class="px-3 py-1.5 bg-green-500/10 border border-green-500/30 rounded-full text-green-400 text-sm">
                                üîê {feature}
                            </span>
                        ))}
                    </div>
                )}
            </div>
        </section>

        <!-- Action Buttons -->
        <section class="container mx-auto px-4 mb-16">
            <div class="max-w-4xl mx-auto">
                <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
                    {project.liveUrl && (
                        <a
                            href={project.liveUrl}
                            target="_blank"
                            rel="noopener noreferrer"
                            class="flex items-center justify-center gap-3 px-6 py-4 bg-gradient-to-r from-green-500 to-emerald-600 hover:from-green-600 hover:to-emerald-700 text-white font-semibold rounded-xl transition-all hover:scale-[1.02]"
                        >
                            <svg xmlns="http://www.w3.org/2000/svg" class="w-5 h-5" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M18 13v6a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V8a2 2 0 0 1 2-2h6"/><polyline points="15 3 21 3 21 9"/><line x1="10" y1="14" x2="21" y2="3"/></svg>
                            View Live Demo
                        </a>
                    )}
                    {project.adminUrl && (
                        <a
                            href={project.adminUrl}
                            target="_blank"
                            rel="noopener noreferrer"
                            class="flex items-center justify-center gap-3 px-6 py-4 bg-gradient-to-r from-orange-500 to-amber-600 hover:from-orange-600 hover:to-amber-700 text-white font-semibold rounded-xl transition-all hover:scale-[1.02]"
                        >
                            <svg xmlns="http://www.w3.org/2000/svg" class="w-5 h-5" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M12 22s8-4 8-10V5l-8-3-8 3v7c0 6 8 10 8 10z"/></svg>
                            Admin Dashboard
                        </a>
                    )}
                    <a
                        href="#technical-challenges"
                        class="flex items-center justify-center gap-3 px-6 py-4 bg-gradient-to-r from-red-500 to-pink-600 hover:from-red-600 hover:to-pink-700 text-white font-semibold rounded-xl transition-all hover:scale-[1.02]"
                    >
                        <svg xmlns="http://www.w3.org/2000/svg" class="w-5 h-5" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M2 3h6a4 4 0 0 1 4 4v14a3 3 0 0 0-3-3H2z"/><path d="M22 3h-6a4 4 0 0 0-4 4v14a3 3 0 0 1 3-3h7z"/></svg>
                        Technical Details
                    </a>
                </div>
            </div>
        </section>

        <!-- Problem / Solution / Impact -->
        <section class="container mx-auto px-4 mb-16">
            <div class="max-w-4xl mx-auto">
                <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                    <!-- Problem -->
                    <div class="bg-red-500/5 border border-red-500/20 rounded-2xl p-6 md:col-span-2">
                        <div class="flex items-center gap-3 text-red-400 font-bold text-lg mb-4">
                            <span class="text-2xl">üéØ</span> The Problem
                        </div>
                        <p class="text-gray-300 leading-relaxed">{project.problem}</p>
                    </div>

                    <!-- Solution -->
                    <div class="bg-green-500/5 border border-green-500/20 rounded-2xl p-6">
                        <div class="flex items-center gap-3 text-green-400 font-bold text-lg mb-4">
                            <span class="text-2xl">üí°</span> The Solution
                        </div>
                        <p class="text-gray-300 leading-relaxed">{project.solution}</p>
                    </div>

                    <!-- Impact -->
                    <div class="bg-blue-500/5 border border-blue-500/20 rounded-2xl p-6">
                        <div class="flex items-center gap-3 text-blue-400 font-bold text-lg mb-4">
                            <span class="text-2xl">üìà</span> The Impact
                        </div>
                        <p class="text-gray-300 leading-relaxed">{project.impact}</p>
                    </div>
                </div>
            </div>
        </section>

        <!-- Admin Credentials -->
        {project.adminCredentials && (
            <section class="container mx-auto px-4 mb-16">
                <div class="max-w-4xl mx-auto">
                    <div class="bg-orange-500/5 border border-orange-500/20 rounded-2xl p-6">
                        <div class="flex items-center gap-3 text-orange-400 font-bold text-lg mb-4">
                            <span class="text-2xl">üîë</span> Admin Dashboard Access
                        </div>
                        <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
                            <div class="bg-gray-800/50 rounded-xl p-4">
                                <span class="text-gray-500 text-sm block mb-1">Email</span>
                                <code class="text-gray-200 font-mono">{project.adminCredentials.email}</code>
                            </div>
                            <div class="bg-gray-800/50 rounded-xl p-4">
                                <span class="text-gray-500 text-sm block mb-1">Password</span>
                                <code class="text-gray-200 font-mono">{project.adminCredentials.password}</code>
                            </div>
                            <div class="bg-gray-800/50 rounded-xl p-4">
                                <span class="text-gray-500 text-sm block mb-1">Access Level</span>
                                <span class="text-orange-300">{project.adminCredentials.access}</span>
                            </div>
                        </div>
                        <p class="text-orange-300/60 text-sm mt-4 text-center">
                            üéÅ Full admin access - manage inventory & analytics
                        </p>
                    </div>
                </div>
            </section>
        )}

        <!-- Technical Challenges -->
        {project.technicalChallenges && project.technicalChallenges.length > 0 && (
            <section id="technical-challenges" class="container mx-auto px-4 mb-16">
                <div class="max-w-4xl mx-auto">
                    <div class="bg-gradient-to-r from-purple-500/5 to-blue-500/5 border border-purple-500/20 rounded-2xl p-8">
                        <div class="flex items-center gap-3 text-purple-400 font-bold text-xl mb-6">
                            <span class="text-2xl">üí°</span> Technical Challenges Solved
                        </div>
                        <ul class="space-y-4">
                            {project.technicalChallenges.map((challenge, index) => (
                                <li class="flex items-start gap-4 bg-gray-800/30 rounded-xl p-4 border-l-4 border-purple-500">
                                    <span class="flex-shrink-0 w-8 h-8 bg-purple-500/20 rounded-full flex items-center justify-center text-purple-400 font-bold">
                                        {index + 1}
                                    </span>
                                    <p class="text-gray-300 leading-relaxed">{challenge}</p>
                                </li>
                            ))}
                        </ul>
                    </div>
                </div>
            </section>
        )}

        <!-- Technical Architecture -->
        {project.architecture && (
            <section class="container mx-auto px-4 mb-16">
                <div class="max-w-4xl mx-auto">
                    <h2 class="text-2xl font-bold text-white mb-8 flex items-center gap-3">
                        <svg xmlns="http://www.w3.org/2000/svg" class="w-6 h-6 text-purple-400" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><rect x="2" y="2" width="20" height="8" rx="2" ry="2"/><rect x="2" y="14" width="20" height="8" rx="2" ry="2"/><line x1="6" y1="6" x2="6.01" y2="6"/><line x1="6" y1="18" x2="6.01" y2="18"/></svg>
                        Technical Architecture
                    </h2>
                    <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
                        <!-- Frontend -->
                        <div class="bg-cyan-500/5 border border-cyan-500/20 rounded-2xl p-6">
                            <h3 class="flex items-center gap-2 text-cyan-400 font-bold mb-4">
                                <svg xmlns="http://www.w3.org/2000/svg" class="w-5 h-5" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><polyline points="16 18 22 12 16 6"/><polyline points="8 6 2 12 8 18"/></svg>
                                Frontend Stack
                            </h3>
                            <ul class="space-y-2">
                                {project.architecture.frontend.map((item) => (
                                    <li class="text-gray-300 text-sm flex items-start gap-2">
                                        <span class="text-cyan-500">‚Ä¢</span> {item}
                                    </li>
                                ))}
                            </ul>
                        </div>

                        <!-- Backend -->
                        <div class="bg-amber-500/5 border border-amber-500/20 rounded-2xl p-6">
                            <h3 class="flex items-center gap-2 text-amber-400 font-bold mb-4">
                                <svg xmlns="http://www.w3.org/2000/svg" class="w-5 h-5" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><rect x="2" y="2" width="20" height="8" rx="2" ry="2"/><rect x="2" y="14" width="20" height="8" rx="2" ry="2"/><line x1="6" y1="6" x2="6.01" y2="6"/><line x1="6" y1="18" x2="6.01" y2="18"/></svg>
                                Backend & Database
                            </h3>
                            <ul class="space-y-2">
                                {project.architecture.backend.map((item) => (
                                    <li class="text-gray-300 text-sm flex items-start gap-2">
                                        <span class="text-amber-500">‚Ä¢</span> {item}
                                    </li>
                                ))}
                            </ul>
                        </div>

                        <!-- Infrastructure -->
                        <div class="bg-emerald-500/5 border border-emerald-500/20 rounded-2xl p-6">
                            <h3 class="flex items-center gap-2 text-emerald-400 font-bold mb-4">
                                <svg xmlns="http://www.w3.org/2000/svg" class="w-5 h-5" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M17.5 19H9a7 7 0 1 1 6.71-9h1.79a4.5 4.5 0 1 1 0 9Z"/></svg>
                                Infrastructure
                            </h3>
                            <ul class="space-y-2">
                                {project.architecture.infrastructure.map((item) => (
                                    <li class="text-gray-300 text-sm flex items-start gap-2">
                                        <span class="text-emerald-500">‚Ä¢</span> {item}
                                    </li>
                                ))}
                            </ul>
                        </div>
                    </div>
                </div>
            </section>
        )}

        <!-- Screenshots -->
        <section class="container mx-auto px-4 mb-16">
            <div class="max-w-6xl mx-auto">
                <h2 class="text-2xl font-bold text-white mb-8 flex items-center gap-3">
                    <span class="text-2xl">üì∏</span> Screenshots
                </h2>
                <div class="grid grid-cols-2 md:grid-cols-3 gap-4">
                    {project.screenshots.map((screenshot, index) => (
                        <div
                            class={`relative rounded-2xl overflow-hidden border border-gray-700 hover:border-purple-500 transition-colors group cursor-pointer ${index === 0 ? 'col-span-2 row-span-2' : ''}`}
                        >
                            <img
                                src={screenshot.src}
                                alt={screenshot.title}
                                class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-500"
                                loading="lazy"
                            />
                            <div class="absolute bottom-0 left-0 right-0 p-3 bg-gradient-to-t from-black/80 to-transparent">
                                <span class="text-white text-sm font-medium">{screenshot.title}</span>
                                <span class="ml-2 text-gray-400 text-xs">
                                    {screenshot.label === 'mobile' ? 'üì±' : 'üñ•Ô∏è'}
                                </span>
                            </div>
                        </div>
                    ))}
                </div>
            </div>
        </section>

        <!-- Tip Bar -->
        <section class="container mx-auto px-4">
            <div class="max-w-4xl mx-auto">
                <div class="bg-gradient-to-r from-purple-500/10 to-blue-500/10 border border-purple-500/20 rounded-xl p-4">
                    <p class="text-center text-gray-400">
                        üöÄ Use the buttons above to explore:{' '}
                        {project.liveUrl && <a href={project.liveUrl} target="_blank" class="text-green-400 hover:underline">Live Demo</a>}
                        {project.liveUrl && project.adminUrl && ', '}
                        {project.adminUrl && <a href={project.adminUrl} target="_blank" class="text-orange-400 hover:underline">Admin Dashboard</a>}
                        {(project.liveUrl || project.adminUrl) && ', and '}
                        <a href="#technical-challenges" class="text-red-400 hover:underline">Full Technical Details</a>
                    </p>
                </div>
            </div>
        </section>
    </main>
</Layout>
