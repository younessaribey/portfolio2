---
import { personal } from "../data/personal";
import ContactForm from "./ContactForm";
---

<section
    id="contact"
    class="section bg-gradient-to-b from-[#0a0a0a] to-purple-950/10"
>
    <div class="container-main">
        <div class="max-w-4xl mx-auto">
            <!-- Section Header -->
            <div class="text-center mb-12">
                <p class="text-purple-400 font-medium mb-4">Get In Touch</p>
                <h2
                    class="text-3xl sm:text-4xl lg:text-5xl font-bold text-white mb-6"
                >
                    Let's Build Something Together
                </h2>
                <p class="text-gray-400 text-lg max-w-xl mx-auto">
                    Have a project in mind? Let's discuss how I can help bring your ideas to life.
                </p>
            </div>

            <!-- Contact Form -->
            <ContactForm client:visible />

            <!-- Alternative Contact Options -->
            <div class="mt-16 pt-12 border-t border-gray-800">
                <p class="text-center text-gray-500 mb-8 text-sm sm:text-base">
                    Or connect with me directly
                </p>
                <div class="grid grid-cols-2 sm:grid-cols-4 gap-4">
                    <!-- Email -->
                    <a
                        href={`mailto:${personal.email}`}
                        class="group p-4 md:p-6 bg-[#111111] rounded-2xl border border-gray-800 hover:border-purple-500 transition-all duration-300 hover:scale-105 text-center"
                    >
                        <div
                            class="w-10 h-10 md:w-12 md:h-12 bg-purple-900/30 rounded-xl flex items-center justify-center mx-auto mb-3 group-hover:bg-purple-900/50 transition-colors"
                        >
                            <svg
                                class="w-5 h-5 md:w-6 md:h-6 text-purple-400"
                                fill="none"
                                stroke="currentColor"
                                viewBox="0 0 24 24"
                            >
                                <path
                                    stroke-linecap="round"
                                    stroke-linejoin="round"
                                    stroke-width="2"
                                    d="M3 8l7.89 4.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"
                                ></path>
                            </svg>
                        </div>
                        <h3 class="text-white font-semibold text-sm md:text-base">Email</h3>
                    </a>

                    <!-- WhatsApp -->
                    <a
                        href="https://wa.me/213550335911"
                        target="_blank"
                        rel="noopener noreferrer"
                        class="group p-4 md:p-6 bg-[#111111] rounded-2xl border border-gray-800 hover:border-green-500 transition-all duration-300 hover:scale-105 text-center"
                    >
                        <div
                            class="w-10 h-10 md:w-12 md:h-12 bg-green-900/30 rounded-xl flex items-center justify-center mx-auto mb-3 group-hover:bg-green-900/50 transition-colors"
                        >
                            <svg
                                class="w-5 h-5 md:w-6 md:h-6 text-green-400"
                                fill="currentColor"
                                viewBox="0 0 24 24"
                            >
                                <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413Z"></path>
                            </svg>
                        </div>
                        <h3 class="text-white font-semibold text-sm md:text-base">WhatsApp</h3>
                    </a>

                    <!-- LinkedIn -->
                    <a
                        href={personal.linkedin}
                        target="_blank"
                        rel="noopener noreferrer"
                        class="group p-4 md:p-6 bg-[#111111] rounded-2xl border border-gray-800 hover:border-blue-500 transition-all duration-300 hover:scale-105 text-center"
                    >
                        <div
                            class="w-10 h-10 md:w-12 md:h-12 bg-blue-900/30 rounded-xl flex items-center justify-center mx-auto mb-3 group-hover:bg-blue-900/50 transition-colors"
                        >
                            <span class="text-lg md:text-xl font-bold text-blue-400">in</span>
                        </div>
                        <h3 class="text-white font-semibold text-sm md:text-base">LinkedIn</h3>
                    </a>

                    <!-- GitHub -->
                    <a
                        href={personal.github}
                        target="_blank"
                        rel="noopener noreferrer"
                        class="group p-4 md:p-6 bg-[#111111] rounded-2xl border border-gray-800 hover:border-gray-500 transition-all duration-300 hover:scale-105 text-center"
                    >
                        <div
                            class="w-10 h-10 md:w-12 md:h-12 bg-gray-800 rounded-xl flex items-center justify-center mx-auto mb-3 group-hover:bg-gray-700 transition-colors"
                        >
                            <svg
                                class="w-5 h-5 md:w-6 md:h-6 text-white"
                                fill="currentColor"
                                viewBox="0 0 24 24"
                            >
                                <path
                                    d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"
                                ></path>
                            </svg>
                        </div>
                        <h3 class="text-white font-semibold text-sm md:text-base">GitHub</h3>
                    </a>
                </div>
            </div>
        </div>
    </div>
</section>
