---
import { personal } from "../data/personal";
---

<section
    id="contact"
    class="section bg-gradient-to-b from-[#0a0a0a] to-purple-950/10"
>
    <div class="container-main">
        <div class="max-w-3xl mx-auto text-center">
            <!-- Section Header -->
            <p class="text-purple-400 font-medium mb-4">Get In Touch</p>
            <h2
                class="text-3xl sm:text-4xl lg:text-5xl font-bold text-white mb-6"
            >
                Let's Build Something Together
            </h2>
            <p class="text-gray-400 text-lg mb-10 max-w-xl mx-auto">
                I'm currently open to new opportunities. Whether you have a
                project in mind or just want to connect, feel free to reach out!
            </p>

            <!-- Contact Options -->
            <div class="grid grid-cols-1 sm:grid-cols-3 gap-4 mb-10">
                <!-- Email -->
                <a
                    href={`mailto:${personal.email}`}
                    class="group p-6 bg-[#111111] rounded-2xl border border-gray-800 hover:border-purple-500 transition-all duration-300 hover:scale-105"
                >
                    <div
                        class="w-12 h-12 bg-purple-900/30 rounded-xl flex items-center justify-center mx-auto mb-4 group-hover:bg-purple-900/50 transition-colors"
                    >
                        <svg
                            class="w-6 h-6 text-purple-400"
                            fill="none"
                            stroke="currentColor"
                            viewBox="0 0 24 24"
                        >
                            <path
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                stroke-width="2"
                                d="M3 8l7.89 4.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"
                            ></path>
                        </svg>
                    </div>
                    <h3 class="text-white font-semibold mb-1">Email</h3>
                    <p class="text-gray-400 text-sm">{personal.emailDisplay}</p>
                </a>

                <!-- LinkedIn -->
                <a
                    href={personal.linkedin}
                    target="_blank"
                    rel="noopener noreferrer"
                    class="group p-6 bg-[#111111] rounded-2xl border border-gray-800 hover:border-blue-500 transition-all duration-300 hover:scale-105"
                >
                    <div
                        class="w-12 h-12 bg-blue-900/30 rounded-xl flex items-center justify-center mx-auto mb-4 group-hover:bg-blue-900/50 transition-colors"
                    >
                        <span class="text-xl font-bold text-blue-400">in</span>
                    </div>
                    <h3 class="text-white font-semibold mb-1">LinkedIn</h3>
                    <p class="text-gray-400 text-sm">Connect with me</p>
                </a>

                <!-- GitHub -->
                <a
                    href={personal.github}
                    target="_blank"
                    rel="noopener noreferrer"
                    class="group p-6 bg-[#111111] rounded-2xl border border-gray-800 hover:border-gray-500 transition-all duration-300 hover:scale-105"
                >
                    <div
                        class="w-12 h-12 bg-gray-800 rounded-xl flex items-center justify-center mx-auto mb-4 group-hover:bg-gray-700 transition-colors"
                    >
                        <svg
                            class="w-6 h-6 text-white"
                            fill="currentColor"
                            viewBox="0 0 24 24"
                        >
                            <path
                                d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"
                            ></path>
                        </svg>
                    </div>
                    <h3 class="text-white font-semibold mb-1">GitHub</h3>
                    <p class="text-gray-400 text-sm">View my code</p>
                </a>
            </div>

            <!-- Main CTA -->
            <a
                href={`mailto:${personal.email}`}
                class="btn-primary text-lg px-10 py-4"
            >
                Say Hello ðŸ‘‹
            </a>
        </div>
    </div>
</section>
