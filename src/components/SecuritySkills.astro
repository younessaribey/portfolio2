---
import { securitySkills } from "../data/personal";
---

<section
    id="security"
    class="py-16 bg-gradient-to-b from-[#0a0a0a] to-red-950/10"
>
    <div class="container-main">
        <!-- Section Header -->
        <div class="text-center mb-12">
            <div
                class="inline-flex items-center gap-2 px-4 py-2 bg-red-900/20 border border-red-800/50 rounded-full mb-4"
            >
                <svg
                    class="w-5 h-5 text-red-400"
                    fill="none"
                    stroke="currentColor"
                    viewBox="0 0 24 24"
                >
                    <path
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        stroke-width="2"
                        d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"
                    ></path>
                </svg>
                <span
                    class="text-sm font-semibold text-red-400 uppercase tracking-wide"
                    >Security Skills</span
                >
            </div>
            <h2 class="text-3xl sm:text-4xl font-bold text-white mb-4">
                Security-First Development
            </h2>
            <p class="text-gray-400 max-w-2xl mx-auto">
                Enterprise-grade security implementations that protect against
                common vulnerabilities and attacks
            </p>
        </div>

        <!-- Security Skills Grid -->
        <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-4">
            {
                securitySkills.map((skill) => (
                    <div class="group bg-[#111111] border border-gray-800 hover:border-red-800/50 rounded-xl p-6 transition-all duration-300 hover:bg-red-950/10">
                        <div class="flex items-start gap-4">
                            <div class="flex-shrink-0 w-10 h-10 bg-red-900/30 rounded-lg flex items-center justify-center">
                                <svg
                                    class="w-5 h-5 text-red-400"
                                    fill="none"
                                    stroke="currentColor"
                                    viewBox="0 0 24 24"
                                >
                                    <path
                                        stroke-linecap="round"
                                        stroke-linejoin="round"
                                        stroke-width="2"
                                        d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"
                                    />
                                </svg>
                            </div>
                            <div class="flex-1 min-w-0">
                                <h3 class="text-lg font-semibold text-white mb-1 group-hover:text-red-400 transition-colors">
                                    {skill.name}
                                </h3>
                                <p class="text-gray-400 text-sm mb-3">
                                    {skill.description}
                                </p>
                                <div class="flex flex-wrap gap-1">
                                    {skill.projects.map((project) => (
                                        <span class="text-xs text-red-400 bg-red-900/20 px-2 py-0.5 rounded-full">
                                            {project}
                                        </span>
                                    ))}
                                </div>
                            </div>
                        </div>
                    </div>
                ))
            }
        </div>
    </div>
</section>
